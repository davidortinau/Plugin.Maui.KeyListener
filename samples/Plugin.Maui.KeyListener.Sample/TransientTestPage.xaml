<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Plugin.Maui.KeyListener.Sample.TransientTestPage"
             Title="Transient Page">

    <ScrollView>
        <VerticalStackLayout Margin="20" Spacing="20">
            <Label Text="Transient Test Page" FontSize="18" FontAttributes="Bold" />
            <Label Text="This page creates a new instance each time you navigate to it" />
            <Label x:Name="InstanceLabel" />
            
            <Button Text="Back to Navigation Test" 
                    Clicked="BackToNavigation_Clicked" />
            
            <Label Text="Key Events:" FontAttributes="Bold" />
            <Button Text="Clear Events" Clicked="ClearEvents_Clicked"/>
            <Label x:Name="EventsLabel" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>