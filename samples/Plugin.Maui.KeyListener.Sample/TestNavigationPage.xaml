<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Plugin.Maui.KeyListener.Sample.TestNavigationPage"
             Title="Navigation Test">

    <ScrollView>
        <VerticalStackLayout Margin="20" Spacing="20">
            <Label Text="Navigation Test Page" FontSize="18" FontAttributes="Bold" />
            <Label Text="This page tests the KeyboardBehavior cleanup during navigation" />
            
            <Button Text="Navigate to Transient Page" 
                    Clicked="NavigateToTransientPage_Clicked" />
            
            <Button Text="Navigate to Singleton Page" 
                    Clicked="NavigateToSingletonPage_Clicked" />
            
            <Button Text="Back to Main" 
                    Clicked="BackToMain_Clicked" />
            
            <Label Text="Key Events:" FontAttributes="Bold" />
            <Button Text="Clear Events" Clicked="ClearEvents_Clicked"/>
            <Label x:Name="EventsLabel" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>