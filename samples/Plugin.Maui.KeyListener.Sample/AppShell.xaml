<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Plugin.Maui.KeyListener.Sample.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:Plugin.Maui.KeyListener.Sample"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Feature Plugin"
        Route="main"
        ContentTemplate="{DataTemplate pages:MainPage}" />

    <ShellContent
        Title="Navigation Test"
        Route="navigation"
        ContentTemplate="{DataTemplate pages:TestNavigationPage}" />

    <!-- Transient page - creates new instance each time -->
    <ShellContent
        Title="Transient Test"
        Route="transient"
        Content="{x:Type pages:TransientTestPage}" />

    <!-- Singleton page - reuses same instance -->
    <ShellContent
        Title="Singleton Test"
        Route="singleton">
        <pages:SingletonTestPage />
    </ShellContent>

</Shell>
