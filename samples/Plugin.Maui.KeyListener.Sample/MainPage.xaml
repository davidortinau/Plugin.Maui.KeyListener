<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Plugin.Maui.KeyListener.Sample.MainPage"
             Title="Feature Plugin">

    <ScrollView>
        <VerticalStackLayout Margin="20" Spacing="20">
            <Label Text="Plugin.Maui.KeyListener Sample" FontSize="18" FontAttributes="Bold" />
            <Label Text="Press any key to see the event details" />
            
            <Button Text="Test Navigation Scenarios" 
                    Clicked="NavigateToTest_Clicked"
                    BackgroundColor="LightBlue" />
            
            <Button Text="Clear" Clicked="ClearButton_Clicked"/>
            <Label x:Name="OutputLabel" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
